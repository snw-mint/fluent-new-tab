{
  "manifest_version": 3,
  "name": "Fluent New Tab",
  "version": "3.0.2",
  "description": "A minimalist, customizable New Tab page inspired by Fluent Design.",
  "default_locale": "en",
  "icons": {
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "chrome_url_overrides": {
    "newtab": "index.html" 
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "permissions": [
    "storage", 
    "unlimitedStorage"
  ],
  "host_permissions": [
    "https://www.google.com/*",
    "https://suggestqueries.google.com/*",
    "https://peapix.com/*",
    "https://api.nasa.gov/*",
    "https://commons.wikimedia.org/*",
    "https://geocoding-api.open-meteo.com/*",
    "https://api.open-meteo.com/*"
  ]
}
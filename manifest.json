{
  "manifest_version": 3,
  "name": "Fluent New Tab",
  "version": "2.1",
  "description": "A minimalist, customizable New Tab page inspired by Fluent Design.",
  "icons": {
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "host_permissions": [
    "*://*.google.com/*",
    "*://*.bing.com/*"
  ]
}